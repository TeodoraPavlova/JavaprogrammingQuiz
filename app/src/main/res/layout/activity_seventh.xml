<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBackground" />

    <ImageView
        android:id="@+id/next_button_to_sixth_question"
        android:layout_width="@dimen/next_button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="402dp"
        app:srcCompat="@drawable/nextbutton" />

    <TextView
        android:id="@+id/fifth_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp"
        android:text="@string/return_nothing"
        android:textAlignment="center"
        android:textColor="@color/colorQuestionsTitles"
        android:textSize="45sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/answer_fifth_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fifth_question_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:hint="@string/edittext_hint"
        android:inputType="textCapWords"
        android:textColor="@color/colorQuestionsAnswers" />

</RelativeLayout>